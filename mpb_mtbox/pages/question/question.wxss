/* pages/question/question.wxss */
.questionItem {background-color: #FFFFFF;padding: 0 10px;margin-bottom: 10px;}
.questionItem .qus-1{border-bottom: 1px solid #EEEEEE;line-height: 51px;height: 50px;}
.questionItem .qus-1 image{width: 15px;height: 15px;margin-right: 3px;vertical-align:middle;}

.questionItem .answer {line-height: 20px;padding: 10px 0;}

.smallStar {width: 6px;height: 6px;vertical-align: top;margin-top:10px;}
    
.table{border-top: 1px solid #EEEEEE;border-left: 1px solid #EEEEEE;}    
.table .tr{overflow:hidden;line-height: 40px;}
.table .tr view{float:left;text-align:center;}

.th-1{width:20%;border-right: 1px solid #EEEEEE;border-bottom: 1px solid #EEEEEE;box-sizing: border-box;}
.th-2{width:16%;border-right: 1px solid #EEEEEE;border-bottom: 1px solid #EEEEEE;box-sizing: border-box;}
.th-3{width:80%;}

.th-3 .tr-2{overflow: hidden;float: none;width: 100%;}
.th-3 .tr-2 view{width:20%;border-right: 1px solid #EEEEEE;border-bottom: 1px solid #EEEEEE;box-sizing: border-box;}

.queTit{width: 50px;height: 31px;}

.queLine{width: 40px;height: 22px;}